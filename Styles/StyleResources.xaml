<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">


    <SolidColorBrush x:Key="PrimaryColour" Color="#01B0FC"></SolidColorBrush>
    <sys:Double x:Key="GreetUserFontSize">20</sys:Double>
    <sys:Double x:Key="MainHeadingFontSize">30</sys:Double>
    <sys:Double x:Key="SideNavbarHeadingFontSize">16</sys:Double>
    <sys:Double x:Key="UserDPWidth">50</sys:Double>
    <sys:Double x:Key="UserDPHeight">50</sys:Double>
    <Thickness x:Key="IconMargin">0 3 6 3</Thickness>
    <Thickness x:Key="NoMargin">0</Thickness>
    <FontWeight x:Key="DemiBold">DemiBold</FontWeight>
    <Style TargetType="TextBlock">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="#01B0FC"></Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="0 0 10 0"></Setter>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Height" Value="30"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>
    <Style x:Key="MyDataGridCell" TargetType="DataGridCell">
        <Setter Property="TextBlock.TextAlignment" Value="Center"/>


    </Style>
    <Style x:Key="FormLabelText" TargetType="TextBlock">
        <Setter Property="Margin" Value="3"></Setter>
        <Setter Property="FontWeight" Value="DemiBold"></Setter>
    </Style>

</ResourceDictionary>